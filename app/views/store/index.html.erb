<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>

<h1>Programaticカタログ</h1>

<% @products.each do |product| %>
  <div class="entry">
    <%= image_tag(product.image_url) %>
    <h3><%= product.title %></h3>
    <div class="description">
      <%= sanitize(product.description) %>
    </div>
    <div class="price_line">
      <span class="price"><%= product.price %></span>
    </div>
  </div>
<% end %> 
